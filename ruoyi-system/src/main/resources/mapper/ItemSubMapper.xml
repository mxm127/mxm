<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ItemSubMapper">
    
    <resultMap type="ItemSub" id="ItemSubResult">
        <result property="subId"    column="sub_id"    />
        <result property="itemId"    column="item_id"    />
        <result property="subTitle"    column="sub_title"    />
        <result property="keyWord"    column="key_word"    />
        <result property="url"    column="url"    />
        <result property="fileType"    column="file_type"    />
    </resultMap>

    <sql id="selectItemSubVo">
        select sub_id, item_id, sub_title, key_word, url, file_type from sys_item_sublist
    </sql>

    <select id="selectItemSubList" parameterType="ItemSub" resultMap="ItemSubResult">
        <include refid="selectItemSubVo"/>
        <where>  
            <if test="subId != null "> and sub_id = #{subId}</if>
            <if test="itemId != null "> and item_id = #{itemId}</if>
            <if test="subTitle != null  and subTitle != ''"> and sub_title = #{subTitle}</if>
            <if test="keyWord != null  and keyWord != ''"> and key_word = #{keyWord}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="fileType != null "> and file_type = #{fileType}</if>
        </where>
    </select>

    <select id="selectItemSubListByItemId"  resultMap="ItemSubResult">
        <include refid="selectItemSubVo"/>
        where item_id = #{itemId}
    </select>
    
    <select id="selectItemSubBySubId" parameterType="Long" resultMap="ItemSubResult">
        <include refid="selectItemSubVo"/>
        where Sub_id = #{SubId}
    </select>
        
    <insert id="insertItemSub" parameterType="ItemSub" useGeneratedKeys="true" keyProperty="subId">
        insert into sys_item_sublist
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemId != null">item_id,</if>
            <if test="subTitle != null and subTitle != ''">sub_title,</if>
            <if test="keyWord != null and keyWord != ''">key_word,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="fileType != null">file_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemId != null">#{itemId},</if>
            <if test="subTitle != null and subTitle != ''">#{subTitle},</if>
            <if test="keyWord != null and keyWord != ''">#{keyWord},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="fileType != null">#{fileType},</if>
         </trim>
    </insert>

    <update id="updateItemSub" parameterType="ItemSub">
        update sys_item_sublist
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="subTitle != null and subTitle != ''">sub_title = #{subTitle},</if>
            <if test="keyWord != null and keyWord != ''">key_word = #{keyWord},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="fileType != null">file_type = #{fileType},</if>
        </trim>
        where sub_id = #{subId}
    </update>

    <delete id="deleteItemSubBySubId" parameterType="Long">
        delete from sys_item_sublist where sub_id = #{subId}
    </delete>

    <delete id="deleteItemSubBySubIds" parameterType="String">
        delete from sys_item_sublist where sub_id in 
        <foreach item="subId" collection="array" open="(" separator="," close=")">
            #{subId}
        </foreach>
    </delete>
</mapper>